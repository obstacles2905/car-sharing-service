{
  "type": "postgres",
  "host": "localhost",
  "port": 5432,
  "username": "${POSTGRES_USER}",
  "password": "${POSTGRES_PASSWORD}",
  "database": "${POSTGRES_DB}",
  "synchronize": true,
  "logging": false,
  "entities": [
    "src/db/entities/**/*.ts"
  ],
  "cli": {
    "entitiesDir": "src/entities"
  }
}
